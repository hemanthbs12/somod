{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/ui-config-schema/schemas/index.json",
  "definitions": {
    "njpParameter": {
      "type": "object",
      "additionalProperties": false,
      "required": ["NJP::Parameter"],
      "properties": {
        "NJP::Parameter": {
          "type": "string",
          "description": "Must refer the parameter available for this module"
        }
      }
    },
    "runtimeConfig": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]{0,63}$": {
          "$ref": "#/definitions/njpParameter"
        }
      },
      "maxProperties": 32,
      "errorMessage": {
        "additionalProperties": "Config Name must contain only Letters, Numbers and Underscore. Must start with letters only"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "env": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Z][A-Z0-9_]{0,63}$": {
          "$ref": "#/definitions/njpParameter"
        }
      },
      "maxProperties": 32,
      "errorMessage": {
        "additionalProperties": "Environmental Variable Name must contain only UpperCase Letters, Numbers and Underscore. Must start with letters only"
      }
    },
    "imageDomains": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string", "format": "hostname" },
          {
            "$ref": "#/definitions/njpParameter"
          }
        ]
      },
      "maxItems": 16
    },
    "publicRuntimeConfig": {
      "$ref": "#/definitions/runtimeConfig"
    },
    "serverRuntimeConfig": {
      "$ref": "#/definitions/runtimeConfig"
    }
  }
}
