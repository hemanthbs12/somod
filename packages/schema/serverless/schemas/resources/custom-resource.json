{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/schema/serverless/schemas/resources/custom-resource.json",
  "title": "Basic Schema for Resource in Serverless Template by Sodaru technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "anyOf": [
    {
      "type": "object",
      "required": ["SOMOD::Extend"]
    },
    {
      "type": "object",
      "properties": {
        "Properties": {
          "type": "object",
          "required": ["ServiceToken"]
        }
      }
    }
  ],
  "errorMessage": {
    "anyOf": "When not extended, Properties must have ServiceToken"
  },
  "properties": {
    "Type": { "type": "string", "pattern": "^Custom::[A-Z][a-zA-Z0-9]{0,63}$" },
    "SOMOD::Access": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Access"
    },
    "SOMOD::Extend": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Extend"
    },
    "SOMOD::DependsOn": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::DependsOn"
    },
    "SOMOD::Output": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Output"
    },
    "SOMOD::CreateIf": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::CreateIf"
    },
    "Properties": {
      "type": "object",
      "properties": {
        "ServiceToken": {
          "$ref": "../components/expression.json#/definitions/somodRef"
        }
      }
    }
  }
}
