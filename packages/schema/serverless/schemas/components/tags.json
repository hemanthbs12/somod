{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/schema/serverless/schemas/components/tags.json",
  "title": "JSON Schema for Tags in Serverless Template by Sodaru Technologies",
  "definitions": {
    "tagsMap": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9._\\/-]{1,128}$": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        }
      }
    },
    "tagsList": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["Key", "Value"],
        "properties": {
          "Key": { "type": "string", "pattern": "^[a-z0-9._\\/-]{1,128}$" },
          "Value": { "type": "string", "minLength": 1, "maxLength": 256 }
        }
      }
    }
  }
}
