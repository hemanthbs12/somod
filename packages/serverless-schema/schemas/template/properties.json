{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template/properties",
  "title": "JSON Schema for Properties in Serverless Template by Sodaru Technologies",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9]+$": {
      "type": "object",
      "additionalProperties": false,
      "description": "Serverless Package limits the properties to only Type, Description and Default, Other validations are to be handlled in parameters.yaml file separately",
      "required": ["Type"],
      "properties": {
        "Type": {
          "enum": ["String", "Number", "List<Number>", "CommaDelimitedList"]
        },
        "Description": {
          "type": "string",
          "maxLength": 4000
        },
        "Default": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ]
        }
      }
    }
  }
}
