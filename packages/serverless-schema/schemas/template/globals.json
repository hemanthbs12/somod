{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template/globals",
  "title": "JSON Schema for Properties in Serverless Template by Sodaru Technologies",
  "type": "object",
  "additionalProperties": false,
  "required": ["Function"],
  "properties": {
    "Function": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Handler", "Runtime"],
      "properties": {
        "Handler": {
          "const": "index.handler"
        },
        "Runtime": {
          "const": "nodejs14.x"
        },
        "MemorySize": {
          "$ref": "./resources/function.json#/definitions/MemorySize"
        },
        "Timeout": {
          "$ref": "./resources/function.json#/definitions/Timeout"
        },
        "Environment": {
          "$ref": "./resources/function.json#/definitions/Environment"
        },
        "EventInvokeConfig": {
          "$ref": "./resources/function.json#/definitions/EventInvokeConfig"
        }
      }
    },
    "Api": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Auth": {
          "$ref": "./resources/api.json#/definitions/ApiAuth"
        }
      }
    }
  }
}
