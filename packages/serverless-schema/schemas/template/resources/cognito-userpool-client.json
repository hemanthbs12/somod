{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template/resources/cognito-userpool-client",
  "title": "JSON Schema for Cognito Userpool Client Resource in Serverless Template by Sodaru Technologies",
  "definitions": {
    "TokenValidityUnits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "AccessToken": {
          "enum": ["seconds", "minutes", "hours", "days"],
          "default": "hours"
        },
        "IdToken": {
          "enum": ["seconds", "minutes", "hours", "days"],
          "default": "hours"
        },
        "RefreshToken": {
          "enum": ["seconds", "minutes", "hours", "days"],
          "default": "days"
        }
      }
    }
  },
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "const": "AWS::Cognito::UserPoolClient" },
    "SLP::Extend": {
      "$ref": "./resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "$ref": "./resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "$ref": "./resource-properties.json#/definitions/SLP::Output"
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "UserPoolId",
        "AllowedOAuthFlowsUserPoolClient",
        "GenerateSecret",
        "PreventUserExistenceErrors"
      ],
      "properties": {
        "UserPoolId": {
          "$ref": "../expression.json#/definitions/stringLike"
        },
        "AccessTokenValidity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600
        },
        "IdTokenValidity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3600
        },
        "RefreshTokenValidity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 315360000
        },
        "TokenValidityUnits": {
          "$ref": "#/definitions/TokenValidityUnits"
        },
        "AllowedOAuthFlowsUserPoolClient": { "const": false },
        "EnableTokenRevocation": { "type": "boolean" },
        "GenerateSecret": {
          "const": false
        },
        "PreventUserExistenceErrors": {
          "const": "ENABLED"
        },
        "ExplicitAuthFlows": {
          "type": "array",
          "items": {
            "enum": [
              "ALLOW_ADMIN_USER_PASSWORD_AUTH",
              "ALLOW_CUSTOM_AUTH",
              "ALLOW_USER_PASSWORD_AUTH",
              "ALLOW_USER_SRP_AUTH",
              "ALLOW_REFRESH_TOKEN_AUTH"
            ]
          }
        },
        "ReadAttributes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "WriteAttributes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
