{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template",
  "title": "JSON Schema for Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": {
      "const": "AWS::Serverless::Function"
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "CodeUri": {
          "type": "string",
          "pattern": "functions"
        }
      }
    }
  },
  "additionalProperties": false
}
