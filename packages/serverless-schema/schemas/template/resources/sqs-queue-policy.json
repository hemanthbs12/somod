{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template/resources/sqs-queue-policy",
  "title": "JSON Schema for SQS Queue Policy Resource in Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "const": "AWS::SQS::QueuePolicy" },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": ["PolicyDocument", "Queues"],
      "properties": {
        "PolicyDocument": {
          "$ref": "../policy.json"
        },
        "Queues": {
          "type": "array",
          "items": { "$ref": "../expression.json#/definitions/stringLike" }
        }
      }
    }
  }
}
