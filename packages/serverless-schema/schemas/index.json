{
  "$schema": "../meta-schemas/index.json",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/schemas/index.json",
  "title": "JSON Schema for Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Resources"],
  "properties": {
    "Resources": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]{1,64}$": {
          "if": {
            "type": "object",
            "properties": {
              "Type": { "const": "AWS::Serverless::Function" }
            }
          },
          "then": { "$ref": "./resources/function.json" },
          "else": {
            "if": {
              "type": "object",
              "properties": {
                "Type": { "const": "AWS::Serverless::LayerVersion" }
              }
            },
            "then": { "$ref": "./resources/function-layer.json" },
            "else": {
              "if": {
                "type": "object",
                "properties": {
                  "Type": {
                    "type": "string",
                    "pattern": "^Custom::[A-Z][a-zA-Z0-9]{0,63}$"
                  }
                }
              },
              "then": { "$ref": "./resources/custom-resource.json" },
              "else": { "$ref": "./resource.json" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
