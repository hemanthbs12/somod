{
  "$schema": "../../meta-schemas/resource.json",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/schemas/resources/function-layer.json",
  "title": "JSON Schema for Layer Version Resource in Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "anyOf": [
    {
      "type": "object",
      "required": ["SOMOD::Extend"]
    },
    {
      "type": "object",
      "properties": {
        "Properties": {
          "type": "object",
          "required": ["LayerName", "RetentionPolicy"],
          "anyOf": [
            { "type": "object", "required": ["SOMOD::FunctionLayerLibraries"] },
            { "type": "object", "required": ["SOMOD::FunctionLayerContent"] }
          ]
        }
      }
    }
  ],
  "errorMessage": {
    "anyOf": "When not extended, Properties must have LayerName, RetentionPolicy and either of SOMOD::FunctionLayerLibraries or SOMOD::FunctionLayerContent"
  },
  "properties": {
    "Type": { "const": "AWS::Serverless::LayerVersion" },
    "SOMOD::Access": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Access"
    },
    "SOMOD::Extend": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Extend"
    },
    "SOMOD::DependsOn": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::DependsOn"
    },
    "SOMOD::Output": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Output"
    },
    "Properties": {
      "type": "object",
      "properties": {
        "LayerName": {
          "$ref": "../components/expression.json#/definitions/somodResourceName"
        },
        "RetentionPolicy": { "const": "Delete" },
        "SOMOD::FunctionLayerLibraries": {
          "type": "array",
          "description": "All dependent libraries to be installed in the layer",
          "items": {
            "type": "string",
            "pattern": "^(@[a-z0-9\\-]+\\/){0,1}[a-z0-9\\-]+$"
          },
          "minItems": 1,
          "maxItems": 32
        },
        "SOMOD::FunctionLayerContent": {
          "type": "object",
          "description": "The Layer Content, map of file-path to file-content",
          "additionalProperties": false,
          "patternProperties": {
            ".*": {
              "$ref": "../components/expression.json#/definitions/stringLike"
            }
          },
          "minProperties": 1,
          "maxProperties": 32
        },
        "ContentUri": false
      },
      "errorMessage": {
        "properties": { "ContentUri": "ContentUri must not exist" }
      }
    }
  }
}
