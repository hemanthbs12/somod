{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/serverless-template/resources/iam-role.json",
  "title": "JSON Schema for IAM Role Resource in Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "additionalProperties": false,
  "properties": {
    "Type": { "const": "AWS::IAM::Role" },
    "SLP::Extend": {
      "$ref": "./resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "$ref": "./resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["default", "attributes"],
      "properties": {
        "default": {
          "type": "boolean",
          "description": "Name of the Role"
        },
        "attributes": {
          "type": "array",
          "items": { "enum": ["Arn", "RoleId"] },
          "uniqueItems": true
        }
      }
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": ["RoleName", "AssumeRolePolicyDocument"],
      "properties": {
        "RoleName": {
          "$ref": "../expression.json#/definitions/slpResourceName"
        },
        "AssumeRolePolicyDocument": { "$ref": "../policy.json" },
        "Description": {
          "type": "string",
          "pattern": "^[\\p{L}\\p{M}\\p{Z}\\p{S}\\p{N}\\p{P}]*$",
          "maxLength": 1000
        },
        "ManagedPolicyArns": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^arn:aws:iam::aws:policy\\/[a-zA-Z0-9]+$"
          },
          "uniqueItems": true
        },
        "MaxSessionDuration": {
          "type": "integer",
          "minimum": 3600,
          "maximum": 43200
        },
        "Path": {
          "type": "string",
          "pattern": "^(\\u002F)|(\\u002F[\\u0021-\\u007F]+\\u002F)$"
        },
        "PermissionsBoundary": {
          "type": "string",
          "pattern": "^arn:aws:iam::aws:policy\\/[a-zA-Z0-9]+$"
        },
        "Policies": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["PolicyDocument", "PolicyName"],
            "properties": {
              "PolicyDocument": { "$ref": "../policy.json" },
              "PolicyName": { "type": "string", "pattern": "^[\\w+=,.@-]+$" }
            }
          }
        },
        "Tags": { "$ref": "../tags.json#/definitions/tagsList" }
      }
    }
  }
}
