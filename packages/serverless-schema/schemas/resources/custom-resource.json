{
  "$schema": "../../meta-schemas/resource.json",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/schemas/resources/custom-resource.json",
  "title": "Basic Schema for Resource in Serverless Template by Sodaru technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "type": "string", "pattern": "^Custom::[A-Z][a-zA-Z0-9]{0,63}$" },
    "SLP::Extend": {
      "$ref": "../components/resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "$ref": "../components/resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["default", "attributes"],
      "properties": {
        "default": { "type": "boolean", "description": "" },
        "attributes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "DeletionPolicy": {
      "const": "Retain"
    },
    "UpdateReplacePolicy": {
      "const": "Retain"
    },
    "Metadata": { "type": "object" },
    "Properties": {
      "type": "object",
      "additionalProperties": true,
      "required": ["ServiceToken"],
      "properties": {
        "ServiceToken": {
          "$ref": "../components/expression.json#/definitions/slpRef"
        }
      }
    }
  },
  "additionalProperties": false
}
