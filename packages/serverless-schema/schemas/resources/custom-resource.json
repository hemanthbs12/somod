{
  "$schema": "../../meta-schemas/resource.json",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/schemas/resources/custom-resource.json",
  "title": "Basic Schema for Resource in Serverless Template by Sodaru technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "type": "string", "pattern": "^Custom::[A-Z][a-zA-Z0-9]{0,63}$" },
    "SOMOD::Access": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Access"
    },
    "SOMOD::Extend": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::Extend"
    },
    "SOMOD::DependsOn": {
      "$ref": "../components/resource-properties.json#/definitions/SOMOD::DependsOn"
    },
    "SOMOD::Output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["default", "attributes"],
      "properties": {
        "default": { "type": "boolean", "description": "" },
        "attributes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "export": {
          "type": "object",
          "additionalProperties": false,
          "description": "attributes to be exported to parameters after deployment. map of attribute/'default' to parameter name",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string",
              "description": "Parameter name"
            }
          }
        }
      }
    },
    "DeletionPolicy": {
      "const": "Retain"
    },
    "UpdateReplacePolicy": {
      "const": "Retain"
    },
    "Metadata": { "type": "object" },
    "Properties": {
      "type": "object",
      "additionalProperties": true,
      "required": ["ServiceToken"],
      "properties": {
        "ServiceToken": {
          "$ref": "../components/expression.json#/definitions/somodRef"
        }
      }
    }
  },
  "additionalProperties": false
}
