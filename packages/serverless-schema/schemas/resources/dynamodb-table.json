{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://sodaru.com/slp/template/resources/dynamodb-table",
  "title": "JSON Schema for DynamoDB Table Resource in Serverless Template by Sodaru Technologies",
  "definitions": {
    "KeySchema": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["AttributeName", "KeyType"],
        "properties": {
          "AttributeName": {
            "$ref": "../expression.json#/definitions/stringLike"
          },
          "KeyType": {
            "enum": ["HASH", "RANGE"]
          }
        }
      },
      "minItems": 1,
      "maxItems": 2,
      "uniqueItems": true
    }
  },
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "const": "AWS::DynamoDB::Table" },
    "SLP::Extend": {
      "$ref": "./resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "$ref": "./resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "$ref": "./resource-properties.json#/definitions/SLP::Output"
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "TableName",
        "KeySchema",
        "AttributeDefinitions",
        "BillingMode"
      ],
      "properties": {
        "TableName": {
          "$ref": "../expression.json#/definitions/slpResourceName"
        },
        "KeySchema": { "$ref": "#/definitions/KeySchema" },
        "AttributeDefinitions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["AttributeName", "AttributeType"],
            "properties": {
              "AttributeName": {
                "$ref": "../expression.json#/definitions/stringLike"
              },
              "AttributeType": {
                "enum": ["S", "N", "B"]
              }
            }
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "BillingMode": {
          "const": "PAY_PER_REQUEST"
        },
        "GlobalSecondaryIndexes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["IndexName", "KeySchema", "Projection"],
            "properties": {
              "IndexName": {
                "$ref": "../expression.json#/definitions/stringLike"
              },
              "KeySchema": { "$ref": "#/definitions/KeySchema" },
              "Projection": {
                "type": "object",
                "additionalProperties": false,
                "required": ["ProjectionType"],
                "properties": {
                  "NonKeyAttributes": {
                    "type": "array",
                    "items": { "type": "string" },
                    "uniqueItems": true
                  },
                  "ProjectionType": {
                    "enum": ["KEYS_ONLY", "INCLUDE", "ALL"],
                    "default": "KEYS_ONLY"
                  }
                }
              }
            }
          },
          "maxItems": 20,
          "uniqueItems": true
        },
        "PointInTimeRecoverySpecification": {
          "type": "object",
          "additionalProperties": false,
          "required": ["PointInTimeRecoveryEnabled"],
          "properties": {
            "PointInTimeRecoveryEnabled": {
              "$ref": "../expression.json#/definitions/booleanLike"
            }
          }
        },
        "SSESpecification": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "KMSMasterKeyId": {
              "$ref": "../expression.json#/definitions/stringLike"
            },
            "SSEEnabled": {
              "$ref": "../expression.json#/definitions/booleanLike"
            },
            "SSEType": {
              "const": "KMS"
            }
          }
        },
        "StreamSpecification": {
          "type": "object",
          "additionalProperties": false,
          "required": ["StreamViewType"],
          "properties": {
            "StreamViewType": {
              "enum": [
                "KEYS_ONLY",
                "NEW_IMAGE",
                "OLD_IMAGE",
                "NEW_AND_OLD_IMAGES"
              ]
            }
          }
        },
        "Tags": {
          "$ref": "../tags.json#/definitions/tagsList"
        },
        "TimeToLiveSpecification": {
          "type": "object",
          "additionalProperties": false,
          "required": ["AttributeName", "Enabled"],
          "properties": {
            "AttributeName": {
              "type": "string"
            },
            "Enabled": {
              "$ref": "../expression.json#/definitions/booleanLike"
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
