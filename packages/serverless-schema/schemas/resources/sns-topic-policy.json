{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/serverless-template/resources/sns-topic-policy.json",
  "title": "JSON Schema for SNS Topic Policy Resource in Serverless Template by Sodaru Technologies",
  "type": "object",
  "required": ["Type", "Properties"],
  "properties": {
    "Type": { "const": "AWS::SNS::TopicPolicy" },
    "SLP::Extend": {
      "$ref": "./resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "$ref": "./resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "$ref": "./resource-properties.json#/definitions/SLP::Output"
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": ["PolicyDocument", "Topics"],
      "properties": {
        "PolicyDocument": {
          "$ref": "../policy.json"
        },
        "Topics": {
          "type": "array",
          "items": { "$ref": "../expression.json#/definitions/stringLike" }
        }
      }
    }
  }
}
