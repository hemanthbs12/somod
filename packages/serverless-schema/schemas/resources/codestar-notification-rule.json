          "type": "array",
          "items": {
            "enum": [
              "codebuild-project-build-state-failed",
              "codebuild-project-build-state-succeeded",
              "codebuild-project-build-state-in-progress",
              "codebuild-project-build-state-stopped",
              "codebuild-project-build-phase-failure",
              "codebuild-project-build-phase-success"
            ]
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "Resource": { "$ref": "../expression.json#/definitions/stringLike" },
        "Status": { "enum": ["DISABLED", "ENABLED"] },
        "Tags": { "$ref": "../tags.json#/definitions/tagsMap" },
        "Targets": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["TargetType", "TargetAddress"],
            "properties": {
              "TargetType": { "const": "SNS" },
              "TargetAddress": {
                "$ref": "../expression.json#/definitions/stringLike"
