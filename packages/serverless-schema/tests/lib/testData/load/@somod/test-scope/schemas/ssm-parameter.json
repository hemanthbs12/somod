{
  "__$schema__": "../../../@somod/serverless-schema/meta-schemas/resource.json",
  "$id": "https://json-schema.sodaru.com/@somod/test-scope/schemas/ssm-parameter.json",
  "title": "JSON Schema for SSM Parameter Resource in Serverless Template by Sodaru Technologies, keys for uri references $schema and $ref are padded with __ to avoid the errors in vscode",
  "type": "object",
  "required": ["Type", "Properties"],
  "additionalProperties": false,
  "properties": {
    "Type": { "const": "AWS::SSM::Parameter" },
    "SLP::Extend": {
      "__$ref__": "../../../@somod/serverless-schema/schemas/components/resource-properties.json#/definitions/SLP::Extend"
    },
    "SLP::DependsOn": {
      "__$ref__": "../../../@somod/serverless-schema/schemas/components/resource-properties.json#/definitions/SLP::DependsOn"
    },
    "SLP::Output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["default", "attributes"],
      "properties": {
        "default": {
          "type": "boolean",
          "description": "Parameter Name"
        },
        "attributes": {
          "type": "array",
          "items": {
            "enum": ["Type", "Value"]
          },
          "uniqueItems": true
        }
      }
    },
    "Properties": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Name", "Type", "Value"],
      "properties": {
        "Name": {
          "type": "object",
          "additionalProperties": false,
          "required": ["Fn::Join"],
          "properties": {
            "Fn::Join": {
              "type": "array",
              "items": [
                { "const": "/" },
                {
                  "type": "array",
                  "items": [
                    { "const": "" },
                    {
                      "__$ref__": "../../../@somod/serverless-schema/schemas/components/expression.json#/definitions/slpResourceName"
                    }
                  ],
                  "minItems": 2,
                  "maxItems": 2
                }
              ],
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "Type": { "enum": ["String", "StringList"] },
        "Value": { "type": "string", "maxLength": 1048 },
        "AllowedPattern": { "type": "string", "format": "regex" },
        "Description": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9\\s._:,-]+$",
          "maxLength": 1024
        },
        "Tags": {
          "__$ref__": "../../../@somod/serverless-schema/schemas/components/tags.json#/definitions/tagsMap"
        }
      }
    }
  }
}
