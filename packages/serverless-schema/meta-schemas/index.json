{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/meta-schemas/index.json",
  "title": "JSON Meta Schema to generate Schema for serverless/template.yaml in SOMOD modules",
  "allOf": [
    { "$ref": "http://json-schema.org/draft-07/schema" },
    {
      "type": "object",
      "required": ["$schema", "$id", "title", "type", "required", "properties"],
      "properties": {
        "type": { "const": "object" },
        "required": { "type": "array", "contains": { "const": "Resources" } },
        "properties": {
          "type": "object",
          "required": ["Resources"],
          "properties": {
            "Resources": {
              "type": "object",
              "required": ["type", "additionalProperties", "propertyNames"],
              "properties": {
                "type": { "const": "object" },
                "additionalProperties": true,
                "propertyNames": {
                  "type": "object",
                  "required": ["type", "pattern"],
                  "properties": {
                    "type": { "const": "string" },
                    "pattern": { "const": "^[a-zA-Z0-9]{1,64}$" }
                  }
                }
              }
            },
            "Outputs": {
              "type": "object",
              "required": ["type", "additionalProperties", "propertyNames"],
              "properties": {
                "type": { "const": "object" },
                "additionalProperties": true,
                "propertyNames": true
              }
            }
          }
        }
      }
    }
  ]
}
