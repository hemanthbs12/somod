{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/meta-schemas/index.json",
  "title": "JSON Meta Schema to generate Schema for serverless/template.yaml in SOMOD modules",
  "allOf": [
    { "$ref": "http://json-schema.org/draft-07/schema" },
    {
      "type": "object",
      "required": ["$schema", "$id", "title", "type", "required", "properties"],
      "properties": {
        "$schema": { "type": "string" },
        "$id": { "type": "string", "format": "uri-reference" },
        "title": { "type": "string" },
        "type": { "const": "object" },
        "required": { "type": "array", "contains": { "const": "Resources" } },
        "properties": {
          "type": "object",
          "required": ["Resources"],
          "properties": {
            "Resources": {
              "type": "object",
              "required": ["type", "additionalProperties", "patternProperties"],
              "properties": {
                "type": { "const": "object" },
                "additionalProperties": { "const": false },
                "patternProperties": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["^[a-zA-Z0-9]{1,64}$"],
                  "properties": {
                    "^[a-zA-Z0-9]{1,64}$": {
                      "$ref": "http://json-schema.org/draft-07/schema"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
