{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/meta-schemas/index.json",
  "title": "JSON Meta Schema to generate Schema for SLP and SOMOD modules",
  "allOf": [
    { "$ref": "http://json-schema.org/draft-07/schema" },
    {
      "type": "object",
      "required": [
        "$schema",
        "$id",
        "title",
        "type",
        "required",
        "properties",
        "additionalProperties"
      ],
      "properties": {
        "$schema": { "type": "string" },
        "$id": { "type": "string", "format": "uri-reference" },
        "title": { "type": "string" },
        "type": { "const": "object" },
        "required": { "const": ["Resources"] },
        "properties": {
          "type": "object",
          "additionalProperties": false,
          "required": ["Resources"],
          "properties": {
            "Resources": {
              "type": "object",
              "additionalProperties": false,
              "required": ["type", "additionalProperties", "patternProperties"],
              "properties": {
                "type": { "const": "object" },
                "additionalProperties": { "const": false },
                "patternProperties": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["^[a-zA-Z0-9]{1,64}$"],
                  "properties": {
                    "^[a-zA-Z0-9]{1,64}$": {
                      "$ref": "http://json-schema.org/draft-07/schema"
                    }
                  }
                }
              }
            }
          }
        },
        "additionalProperties": { "const": false }
      },
      "additionalProperties": false
    }
  ]
}
