{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://json-schema.sodaru.com/@somod/serverless-schema/meta-schemas/resource.json",
  "title": "JSON Meta Schema for Resource in serverless/template.yaml in SOMOD packages",
  "allOf": [
    { "$ref": "http://json-schema.org/draft-07/schema" },
    {
      "type": "object",
      "required": ["$schema", "$id", "title", "type", "required", "properties"],
      "properties": {
        "type": { "const": "object" },
        "required": {
          "type": "array",
          "items": [{ "const": "Type" }, { "const": "Properties" }],
          "minItems": 2,
          "additionalItems": {
            "anyOf": [
              {
                "enum": ["SOMOD::Extend", "SOMOD::DependsOn", "SOMOD::Output"]
              },
              { "type": "string" }
            ]
          },
          "uniqueItems": true
        },
        "properties": {
          "type": "object",
          "required": ["Type", "Properties"],
          "properties": {
            "Type": {
              "allOf": [
                {
                  "$ref": "http://json-schema.org/draft-07/schema"
                },
                {
                  "oneOf": [
                    {
                      "type": "object",
                      "required": ["type"],
                      "properties": { "type": { "const": "string" } }
                    },
                    {
                      "type": "object",
                      "required": ["const"],
                      "properties": { "const": { "type": "string" } }
                    }
                  ]
                }
              ]
            },
            "SOMOD::Access": {
              "type": "object",
              "additionalProperties": false,
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "\\/resource-properties.json#\\/definitions\\/SOMOD::Access$"
                }
              }
            },
            "SOMOD::Extend": {
              "type": "object",
              "additionalProperties": false,
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "\\/resource-properties.json#\\/definitions\\/SOMOD::Extend$"
                }
              }
            },
            "SOMOD::DependsOn": {
              "type": "object",
              "additionalProperties": false,
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "\\/resource-properties.json#\\/definitions\\/SOMOD::DependsOn$"
                }
              }
            },
            "SOMOD::Output": {
              "type": "object",
              "additionalProperties": false,
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "\\/resource-properties.json#\\/definitions\\/SOMOD::Output$"
                }
              }
            },
            "Properties": {
              "allOf": [
                {
                  "$ref": "http://json-schema.org/draft-07/schema"
                },
                {
                  "type": "object",
                  "required": ["type"],
                  "properties": {
                    "type": { "const": "object" }
                  }
                }
              ]
            }
          }
        }
      }
    }
  ]
}
