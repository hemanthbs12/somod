{
  "name": "@somod/njp",
  "version": "1.9.1",
  "description": "Sodaru module Next Js Package Builder",
  "keywords": [
    "sodaru",
    "njp",
    "package",
    "builder"
  ],
  "author": "Raghavendra K R <raghavendra@sodaru.com>",
  "homepage": "https://gitlab.com/sodaru/somod/sdk/packages/njp#readme",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "bin": {
    "njp": "./bin/njp.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/sodaru/somod/sdk.git"
  },
  "scripts": {
    "clean": "npx rimraf dist",
    "bundle": "npx esbuild src/index.ts --bundle --outdir=dist --platform=node --minify --external:@sodev/sodev --external:@typescript-eslint/typescript-estree --external:esbuild --external:lodash --external:tslib ",
    "build": "npm run clean && npm run bundle",
    "pretest": "$CI || npm run build",
    "test": "echo 'No tests defined'",
    "update:bin": "sed -i \"s|OTLP_URL|$OTLP_URL|g\" bin/njp.js && sed -i \"s|OTLP_KEY_NAME|$OTLP_KEY_NAME|g\" bin/njp.js && sed -i \"s|OTLP_KEY_VALUE|$OTLP_KEY_VALUE|g\" bin/njp.js",
    "prepack": "$OTLP_URL || npm run update:bin"
  },
  "peerDependencies": {
    "@sodev/sodev": "^1.1.0",
    "@somod/base-libs": "^1.0.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.2 || ^18.0.0",
    "@typescript-eslint/typescript-estree": ">=5.22.0",
    "next": "^12.0.7",
    "react": "^17.0.2 || ^18.0.0",
    "react-dom": "^17.0.2 || ^18.0.0",
    "typescript": "^4.5.5",
    "@somod/ui-config-schema": "^1.9.1",
    "@somod/parameters-schema": "^1.9.1"
  },
  "devDependencies": {
    "@solib/cli-base": "^1.4.0",
    "@types/node": "^17.0.21",
    "typescript": "^4.5.5",
    "@somod/sdk-lib": "^1.9.1"
  },
  "dependencies": {
    "@solib/cli-open-telemetry": "^1.0.0"
  }
}
